This script outlines the methods used to run a hyperparameter search for DEMETER1.

# DRIVE
./preprocess-gcts drive_reformatted.Rdata DRIVE_batches.csv DRIVE_mat.gct

Rscript sample_drive_hyperparameters.R --output.file=hyperparameter-samples.csv

  --params hyperparameter-samples.csv \
  Rscript ./eval-demeter --holdout.fold='{fold}' --config.index='{config.index}' \
    --fold.count=5 --randseed=1 --G.S='{G.S}' --alpha.beta.gamma='{alpha.beta.gamma}' \
    --full.data.file drive_reformatted.Rdata --output.file=out.rds \
    --learning.rate='{learning.rate}' --max.num.iter=500

rm hpsearch/*/stdout.txt

./merge-eval-outputs hpsearch hpsearch-merged.rds